PYTHON = @PYTHON@
SWIG = @SWIG@

all : _marsyas.so

_marsyas.so : setup.py marsyas_wrap.cxx marsyas.py
	$(PYTHON) setup.py build_ext --inplace

%_wrap.c %.py : %.i
	$(SWIG) -c++ -python $<

install :
	$(PYTHON) setup.py install

clean distclean :
	$(PYTHON) setup.py clean -a
	rm -rf _marsyas.so *.pyc *.pyo

CXXFLAGS = @CXXFLAGS@ @CPPFLAGS@ -I@top_srcdir@/src
LDFLAGS  = @LDFLAGS@ @LIBS@ @Libs@ -L@top_builddir@/lib/release -lmarsyas -lstdc++
CXX      = @CXX@

all : marsyas.so

clean distclean :
	rm -rf marsyas.so

%.so : %_wrap.cxx
	$(CXX) -shared -o $@ $< $(CXXFLAGS) $(LDFLAGS)

%_wrap.cxx : %.i
	swig -c++ -lua $< 

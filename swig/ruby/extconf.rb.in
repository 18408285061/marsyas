require 'mkmf'

$CFLAGS += " " << "@CXXFLAGS@ @CPPFLAGS@ -I@top_srcdir@/src"
$LDFLAGS += " " << "@LDFLAGS@ @LIBS@ @top_builddir@/lib/release/libmarsyas.a -lstdc++ @Libs@"

create_makefile("marsyas")

open("Makefile", "a") do |mf|
	mf.puts <<EOF
Makefile : extconf.rb
	ruby $<
%_wrap.cxx : %.i
	swig -c++ -ruby $<
EOF
end
